---

import "../styles/global.css";

---

<!-- AVANTAGES / IMPACT -->
<section id="avantages" class="relative py-28 px-6 overflow-hidden bg-white">

  <div class="relative max-w-6xl mx-auto text-center">

    <!-- Grille -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
      <!-- Carte 1 -->
      <div class="group bg-white p-8 flex flex-col items-center relative overflow-hidden">
        <div class="absolute inset-0 bg-[#F80000] opacity-0 transition"></div>
        <div class="text-5xl font-bold text-id-postur-dark mb-2">+800</div>
        <p class="text-gray-700 font-medium">Études posturales réalisées</p>
        <span class="mt-4 w-12 h-[3px] bg-id-postur-dark rounded-full"></span>
      </div>

      <!-- Carte 2 -->
      <div class="group bg-white p-8 flex flex-col items-center relative overflow-hidden">
        <div class="absolute inset-0 bg-[#F80000] opacity-0 transition"></div>
        <div class="text-5xl font-bold text-id-postur-dark mb-2">+25</div>
        <p class="text-gray-700 font-medium">Cyclistes professionnels accompagnés</p>
        <span class="mt-4 w-12 h-[3px] bg-id-postur-dark rounded-full"></span>
      </div>

      <!-- Carte 3 -->
      <div class="group bg-white p-8 flex flex-col items-center relative overflow-hidden">
        <div class="absolute inset-0 bg-[#F80000] opacity-0 transition"></div>
        <div class="text-5xl font-bold text-id-postur-dark mb-2">+3 ans</div>
        <p class="text-gray-700 font-medium">d’expérience terrain et analyse</p>
        <span class="mt-4 w-12 h-[3px] bg-id-postur-dark"></span>
      </div>
    </div>
  </div>
</section>
